  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const moonImage = document.querySelector(".moon");
      const sunImage = document.querySelector(".sun");
      const messageContainer = document.getElementById("messageContainer");
      const lines = ['line1', 'line2', 'line3', 'line4', 'line5', 'line6', 'line7', 'line8', 'line9', 'line10', 'line11', 'line12', 'line13', 'line14', 'line15', 'line16'];
      let currentLine = 0;

      function showMessage() {
        messageContainer.style.opacity = "1";
        const messageInterval = setInterval(showLine, 1500); // Start typing animation
      }

      function updateBrightness() {
        const currentTime = new Date().getSeconds();
        const brightness = Math.min(100, Math.max(100, 50 - currentTime * (100 / 55)));
        const filterValue = `brightness(${brightness}%)`;
        document.body.style.filter = filterValue;
      }

      function showLine() {
        const currentLineElement = document.getElementById(lines[currentLine]);
        currentLineElement.style.animation = "typing 1.5s forwards";
        currentLineElement.style.textDecoration = "none";  // Remove underline
        currentLineElement.style.cursor = "none";          // Remove cursor
        currentLine++;
        if (currentLine >= lines.length) {
          clearInterval(messageInterval);
        }
      }

      function showSun() {
        sunImage.style.opacity = "1";
        moonImage.style.opacity = "0";
        setTimeout(() => {
          sunImage.style.filter = "brightness(100%)";
          moonImage.style.filter = "brightness(0%)";
        }, 1000);
      }

      const messageInterval = setInterval(showMessage, 3000);
      setInterval(updateBrightness, 1000);
      setTimeout(showSun, 8000);
    });
  </script>
</body>
